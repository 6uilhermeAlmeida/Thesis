<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorOnBackground">@android:color/black</item>
    </style>

    <style name="expandedTitleAppearance" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="collapsedTitleAppearance" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
